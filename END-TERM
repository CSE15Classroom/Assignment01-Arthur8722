            text-align: center;
            margin-bottom: 25px;
        }

        /* Gallery container */
        .gallery {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* fewer columns = bigger images */
            gap: 20px;
        }

        /* Images */
        .gallery img {
            width: 100%;
            height: auto;
            border: 2px solid #aaa;
            border-radius: 6px;
            background-color: white;
        }

        /* Tablet view */
        @media (max-width: 768px) {
            .gallery {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Mobile view */
        @media (max-width: 480px) {
            .gallery {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

